<div class="mt-4">
  <h1>
    <a href="/specialisms">
      <i class="fa fa-book me-2"></i> Gestión de Especialidades de Mentores
    </a> / Agregar Especialidad
  </h1>
  <hr>

  <!-- Mensaje general de error -->
  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <h2>Información de la Especialidad</h2>

  <div style="width: 30%;" class="mt-3">
    <%= form_with model: @specialism, url: specialisms_path, method: :post, local: true do |form| %>
      <!-- Campo Nombre con icono -->
      <div class="mb-3">
        <%= form.label :name, 'Nombre de la Especialidad'.html_safe, class: "form-label" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Ej: Marketing Digital" %>
      </div>

      <!-- Botones con iconos -->
      <div class="d-flex justify-content-between">
        <%= link_to '<i class="fa fa-arrow-left"></i> Cancelar'.html_safe, specialisms_path, class: "btn btn-secondary" %>
         <button type="submit" class="btn btn-primary">
          <i class="fa fa-save"></i> Guardar Registro
        </button>
      </div>
    <% end %>
  </div>
</div>