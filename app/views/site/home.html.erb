<% content_for :head do %>
  <style> 
    .slider {
      position: relative;
      height: 600px; /* Ajusta según necesites */
      background-size: cover;
      background-position: center;
    }

    .slider-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      color: white;
      z-index: 1;
    }

    .slider-text h1 {
      font-size: 3rem;
      margin-bottom: 20px;
    }

    .slider-text p {
      font-size: 1.2rem;
      max-width: 800px;
      margin: 0 auto;
    }

    .slider-text button {
      padding: 10px 20px;
      font-size: 1rem;
      background-color: #fff;
      color: #000;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .slider-text button:hover {
      background-color: #f0f0f0;
    }

    /* Sección de estadísticas */
    .stats-section {
      background-color: #f8f9fa;
      padding: 50px 0;
    }

    .stats-item {
      text-align: center;
      margin-bottom: 20px;
    }

    .stats-item h3 {
      font-size: 1.2rem;
      margin-bottom: 5px;
    }

    .stats-item span {
      font-size: 2rem;
      font-weight: bold;
      color: #ff6b3d; /* Naranja vibrante */
    }

    /* Sección de noticias */
    .news-section {
      padding: 50px 0;
      padding-bottom: 20px;
    }

    .card {
      margin-bottom: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-title {
      font-size: 1.2rem;
      margin-bottom: 10px;
    }

    .card-text {
      font-size: 0.9rem;
      color: #6c757d;
    }
  </style>
<% end %>
<% content_for :script do %> 
<script>
</script>
<% end %>
<!-- Contenido principal -->

<% if @sliders.any? %>
  <section class="slider">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <!-- Indicadores -->
      <div class="carousel-indicators">
        <% @sliders.each_with_index do |slider, index| %>
          <button 
            type="button" 
            data-bs-target="#carouselExampleIndicators" 
            data-bs-slide-to="<%= index %>"
            <% if index == 0 %>
              class="active"
              aria-current="true"
            <% end %>
            aria-label="Slide <%= index + 1 %>">
          </button>
        <% end %>
      </div>

      <!-- Slides -->
      <div class="carousel-inner">
        <% @sliders.each_with_index do |slider, index| %>
          <div class="carousel-item <%= 'active' if index == 0 %>"
               style="background-image: url('<%= ENV['URL_FILES_SERVICE'] + slider.image_url %>'); background-size: cover; background-position: center; height: 600px;">
            <div class="container h-100 d-flex align-items-center">
              <div class="slider-text text-white">
                <h1><%= slider.title %></h1>
                <p><%= slider.subtitle %></p>
                <a href="/item-news/<%= slider.activity_url %>" class="btn btn-primary mt-3">Conoce más</a>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Controles -->
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
      </button>
    </div>
  </section>
<% else %>
  <!-- Fallback si no hay sliders -->
  <section class="slider" style="height: 600px; background: #000;">
    <div class="container h-100 d-flex align-items-center justify-content-center">
      <div class="text-white text-center">
        <h1>No hay sliders disponibles</h1>
      </div>
    </div>
  </section>
<% end %>

<!-- Sección de estadísticas -->
<section class="stats-section">
  <div class="container">
    <div class="row justify-content-around">
      <div class="col-md-2 stats-item">
        <h3>Alumnos</h3>
        <span>28,590</span>
      </div>
      <div class="col-md-2 stats-item">
        <h3>Egresados</h3>
        <span>68,269</span>
      </div>
      <div class="col-md-2 stats-item">
        <h3>Carreras</h3>
        <span>14</span>
      </div>
      <div class="col-md-2 stats-item">
        <h3>Doctorados</h3>
        <span>2</span>
      </div>
      <div class="col-md-2 stats-item">
        <h3>Maestrías</h3>
        <span>12</span>
      </div>
      <div class="col-md-2 stats-item">
        <h3>Años</h3>
        <span>63</span>
      </div>
    </div>
  </div>
</section>

<!-- Sección de noticias -->
<section class="news-section">
  <div class="container">
    <h2 class="mb-4">Noticias recientes</h2>
    <div class="row">
      <% @new_items.each_with_index do |item, index| %>
        <div class="col-md-3 mb-4">
          <div class="card h-100">
            <img src="<%= ENV['URL_FILES_SERVICE'] + item.image_url %>" class="card-img-top" alt="<%= item.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= item.title %></h5>
              <p class="card-text"><%= item.subtitle %></p>
              <a href="/item-news/<%= item.url %>" class="btn btn-primary btn-sm mt-2">
                <i class="fa fa-arrow-right me-1"></i> Leer más
              </a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Sección de Mentores -->
<section class="mentors-section mb-4">
  <div class="container">
    <h2 class="mb-4">Nuestros Mentores</h2>

    <% if @mentors.any? %>
      <!-- Slider -->
      <div id="mentorsCarousel" class="carousel slide" data-bs-ride="carousel">

        <!-- Indicadores -->
        <div class="carousel-indicators">
          <% (0...@mentors.length).step(3).each_with_index do |i, index| %>
            <button 
              type="button" 
              data-bs-target="#mentorsCarousel" 
              data-bs-slide-to="<%= index %>" 
              <%= 'class="active" aria-current="true"' if index == 0 %>
              aria-label="Slide <%= index + 1 %>">
            </button>
          <% end %>
        </div>

        <!-- Slides -->
        <div class="carousel-inner">
          <% @mentors.each_slice(3).with_index do |mentors_slice, slide_index| %>
            <div class="carousel-item <%= 'active' if slide_index == 0 %>">
              <div class="row">
                <% mentors_slice.each do |mentor| %>
                  <div class="col-md-4 mb-4">
                    <div class="card d-flex flex-row shadow-sm h-100" style="gap: 1rem;">
                      <!-- Imagen a la izquierda -->
                      <div class="flex-shrink-0" style="width: 120px; height: 120px;">
                        <%= image_tag(
                              ENV['URL_FILES_SERVICE'] + mentor.image_url,
                              class: "img-fluid rounded-start",
                              alt: mentor.full_name,
                              style: "width: 100%; height: 100%; object-fit: cover;"
                            ) %>
                      </div>

                      <!-- Datos a la derecha -->
                      <div class="card-body d-flex flex-column justify-content-center p-2">
                        <h5 class="card-title mb-1"><%= mentor.full_name %></h5>
                        <p class="card-text text-muted mb-1"><strong>Cargo:</strong> <%= mentor.charge %></p>
                        <p class="card-text text-muted mb-1"><strong>Email:</strong> <%= mail_to mentor.email %></p>
                        
                        <!-- Especialidades -->
                        <p class="card-text mb-0">
                          <strong>Especialidades:</strong>
                          <% if false %>
                            <% mentor.specialisms_list.each do |spec| %>
                              <span class="badge bg-secondary me-1"><%= spec.name %></span>
                            <% end %>
                          <% end %>
                        </p>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Controles -->
        <button class="carousel-control-prev" type="button" data-bs-target="#mentorsCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mentorsCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Siguiente</span>
        </button>
      </div>
    <% else %>
      <p class="text-muted">No hay mentores disponibles.</p>
    <% end %>
  </div>
</section>
