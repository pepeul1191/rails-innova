<% content_for :head do %>
  <style> 
    .slider {
      position: relative;
      height: 600px; /* Ajusta según necesites */
      background-size: cover;
      background-position: center;
    }

    .slider-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      color: white;
      z-index: 1;
    }

    .slider-text h1 {
      font-size: 3rem;
      margin-bottom: 20px;
    }

    .slider-text p {
      font-size: 1.2rem;
      max-width: 800px;
      margin: 0 auto;
    }

    .slider-text button {
      padding: 10px 20px;
      font-size: 1rem;
      background-color: #fff;
      color: #000;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .slider-text button:hover {
      background-color: #f0f0f0;
    }

    /* Sección de estadísticas */
    .stats-section {
      background-color: #f8f9fa;
      padding: 50px 0;
    }

    .stats-item {
      text-align: center;
      margin-bottom: 20px;
    }

    .stats-item h3 {
      font-size: 1.2rem;
      margin-bottom: 5px;
    }

    .stats-item span {
      font-size: 2rem;
      font-weight: bold;
      color: #ff6b3d; /* Naranja vibrante */
    }

    /* Sección de noticias */
    .news-section {
      padding: 50px 0;
    }

    .card {
      margin-bottom: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-title {
      font-size: 1.2rem;
      margin-bottom: 10px;
    }

    .card-text {
      font-size: 0.9rem;
      color: #6c757d;
    }
  </style>
<% end %>
