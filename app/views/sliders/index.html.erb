<div class="mt-4">
  <h1><i class="fa fa-picture-o me-2"></i> Gestión de Sliders</h1>
  <hr>
  <!-- Mensaje general de error -->
  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>
  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  <!-- Tabla de Sliders -->
  <h2>Listado de Sliders</h2>
  <div class="w-75">
    <!-- Botón Agregar Registro -->
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center me-3">

      </div> 
      <div class="d-flex gap-2">
        <a href="/sliders/new" class="btn btn-primary">
          <i class="fa fa-plus"></i> Agregar Registro
        </a>
      </div>
    </div>
  
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Título</th>
          <th>Subtítulo</th>
          <th class="text-end" style="padding-right: 85px;">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @sliders.each do |slider| %>
          <tr>
            <td><%= slider.title %></td>
            <td><%= slider.subtitle %></td>
            <td class="text-end"> <!-- Alinea los botones a la derecha -->
              <a href="/sliders/<%= slider.id %>/edit" class="btn btn-secondary  me-1 d-inline-block">
                <i class="fa fa-edit"></i> Editar
              </a>
              <a href="/sliders/<%= slider.id %>/delete" class="btn btn-danger  d-inline-block" data-confirm="¿Seguro?" rel="nofollow" data-method="delete">
                <i class="fa fa-trash"></i> Eliminar
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<style>
  /* Estilos para ajustar el ancho de las columnas */
  .table th:nth-child(1), .table td:nth-child(1) { width: 30%; }
  .table th:nth-child(2), .table td:nth-child(2) { width: 30%; }
  .table th:nth-child(3), .table td:nth-child(3) { width: 15%; }
</style>