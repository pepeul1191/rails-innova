<% content_for :head do %>
  <style> 
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
    }
    .container-fluid {
      height: 100%;
    }
    .row {
      height: 100%;
    }
  </style>
<% end %>

<div class="container-fluid h-100">
  <div class="row h-100">
    <!-- Lado izquierdo: Imagen o fondo -->
    <div class="col-md-6 d-none d-md-block bg-secondary"></div>

    <!-- Lado derecho: Formulario -->
    <div class="col-md-6 d-flex align-items-center justify-content-center">
      <div class="w-50">
        <h2 class="mb-4">Recuperar Contraseña</h2>

        <form action="/reset-password" method="post" class="needs-validation" id="reset-password-form" novalidate>
          <div class="mb-3">
            <label for="email" class="form-label">Correo Electrónico</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese su correo" required disabled>
            <div class="invalid-feedback">Por favor, ingresa un correo válido.</div>
          </div>

          <div class="alert alert-warning text-center" role="alert">
            Función deshabilitada temporalmente
          </div>

          <div class="d-grid gap-2 mb-3">
            <button type="submit" class="btn btn-primary" id="reset-button" disabled>Enviar Instrucciones</button>
          </div>

          <div class="text-center">
            <a href="/sign-in" class="d-block mb-2">Volver a Iniciar Sesión</a>
            <a href="/sign-up" class="d-block">Crear nueva cuenta</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
