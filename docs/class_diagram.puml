  - id: Integer
  - title: String
  - subtitle: String
  - imageUrl: String
  - activityUrl: String
  - created: Datetime 
  - updated: Datetime
}

class Activity {
  - id: Integer
  - title: String
  - subtitle: String
  - content: String
  - imageUrl: String
  - url: String
